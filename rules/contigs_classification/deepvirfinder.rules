
rule execute_deepvirfinder:
    input:
        scaffolds = "samples/{sample}/assembly/spades/large_contigs_edit.fasta",
    singularity:
        "docker://metagenlab/deepvirfinder:1.0"
    threads:
        16
    output:
        "samples/{sample}/contigs_classification/deepvirfinder/large_contigs_edit.fasta_gt500bp_dvfpred.txt"
    shell:
        """
        dvf.py -i {input[0]} -o samples/{wildcards.sample}/contigs_classification/deepvirfinder -l 500 -c {threads}
        """
