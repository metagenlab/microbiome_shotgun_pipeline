
rule execute_rgi:
    input:
        scaffolds = "samples/{sample}/assembly/spades/large_contigs_edit.fasta",
    singularity:
        "docker://metagenlab/rgi_5.0.0-v3.0.4"
    threads:
        8
    output:
        "samples/{sample}/annotation/rgi/rgi.json"
    shell:
        """
        rgi main -t contig -i {input[0]} -n {threads} -o $(dirname {output[0]})/rgi
        """