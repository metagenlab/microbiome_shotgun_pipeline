rule all_PathseqDB:
    input: "PathseqDB/pathseq_host.tar.gz",
           "PathseqDB/pathseq_microbe.tar.gz",
           "PathseqDB/pathseq_microbe_list.txt",
           "PathseqDB/pathseq_taxonomy.tar.gz"

rule download_data_from_ftp:
    output: "PathseqDB/{filename}"

    shell: "wget ftp://gsapubftp-anonymous@ftp.broadinstitute.org/bundle/pathseq/{wildcards.filename} {input} -P PathseqDB"