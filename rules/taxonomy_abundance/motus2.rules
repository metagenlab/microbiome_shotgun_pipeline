

rule execute_motus2_relative:
    conda:
        "../../envs/motus2.yml"
    input:
        "samples/{sample}/reads/trimmed/R1_paired.fastq",
        "samples/{sample}/reads/trimmed/R2_paired.fastq"
    threads:
        8
    output:
        "samples/{sample}/motus2/relative/{rank}/profile.motus"
    shell:
        """
        motus profile -f {input[0]} -r {input[1]} -t 8 -o {output[0]} -k {wildcards.rank}
        """


rule execute_motus2_absolute:
    conda:
        "../../envs/motus2.yml"
    input:
        "samples/{sample}/reads/trimmed/R1_paired.fastq",
        "samples/{sample}/reads/trimmed/R2_paired.fastq"
    threads:
        8
    output:
        "samples/{sample}/motus2/absolute/{rank}/profile.motus"
    shell:
        """
        motus profile -f {input[0]} -r {input[1]} -c -t 8 -o {output[0]} -k {wildcards.rank}
        """


rule motus2_merge:
    conda:
        "../../envs/motus2.yml"
    input:
        expand("samples/{sample}/motus2/relative/{{rank}}/profile.motus", sample = list(read_naming.keys()))
    threads:
        8
    output:
        "report/motus2/relative/{rank}/merged_profile.motus"
    shell:
        """
        echo motus merge -i {params} -o {output[0]}
        motus merge -i {params} -o {output[0]}
        """
