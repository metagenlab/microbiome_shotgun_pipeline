
rule all_tools_output:
    input: kraken2="tool_outputs_comparison/all_kraken2.tsv",
            bracken="tool_outputs_comparison/all_bracken.tsv",
            pathseq="tool_outputs_comparison/all_pathseq.tsv",
            kaiju="tool_outputs_comparison/all_kaiju.tsv",
            surpi="tool_outputs_comparison/all_surpi.tsv",
            ezvir="tool_outputs_comparison/all_ezvir.tsv",
            ganon="tool_outputs_comparison/all_ganon.tsv"


def paired(wildcards):
    fastq_list = read_naming[wildcards.sample]
    if len(fastq_list) == 2:
        return True
    else:
        return False

rule merge_Kraken2_outputs:
    conda: pipeline_path + "envs/compare-tools.yml"

    input: expand("kraken2/{sample}/report.txt",sample=list(read_naming.keys()))

    output: "tool_outputs_comparison/all_kraken2.tsv"

    script: "scripts/kraken2-merge.py"

